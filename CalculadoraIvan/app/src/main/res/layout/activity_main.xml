<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="349dp"
            android:layout_height="213dp" android:id="@+id/pantallaVisualizacion"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
            android:textAlignment="textEnd" android:textIsSelectable="false"
            android:paddingTop="140dp" android:textSize="48sp"/>
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="382dp"
            android:layout_height="376dp" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/pantallaVisualizacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <Button
                android:text="1"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="0" app:layout_column="0"
                android:id="@+id/boton1" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="2"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="0" app:layout_column="1"
                android:id="@+id/boton2" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="3"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="0" app:layout_column="2"
                android:id="@+id/boton3" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="+"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="0" app:layout_column="3"
                android:id="@+id/botonSumar" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="4"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="1" app:layout_column="0"
                android:id="@+id/boton4" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="5"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="1" app:layout_column="1"
                android:id="@+id/boton5" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="6"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="1" app:layout_column="2"
                android:id="@+id/boton6" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="-"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="1" app:layout_column="3"
                android:id="@+id/botonRestar" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="7"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="2" app:layout_column="0"
                android:id="@+id/boton7" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="8"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="2" app:layout_column="1"
                android:id="@+id/boton8" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="9"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="2" app:layout_column="2"
                android:id="@+id/boton9" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="/"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="2" app:layout_column="3"
                android:id="@+id/botonDividir" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="0"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="3" app:layout_column="1"
                android:id="@+id/boton0" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="*"
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="3" app:layout_column="3"
                android:id="@+id/botonMultiplicar" app:cornerRadius="30dp" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="="
                android:layout_width="75dp"
                android:layout_height="75dp" app:layout_row="4" app:layout_column="2"
                android:id="@+id/botonOperacion" android:layout_marginStart="20dp" android:layout_marginLeft="20dp"
                app:cornerRadius="30dp" app:layout_rowSpan="2" app:layout_rowWeight="2" app:layout_columnSpan="2"
                app:layout_columnWeight="2"/>
    </androidx.gridlayout.widget.GridLayout>
    <Button
            android:text="C"
            android:layout_width="173dp"
            android:layout_height="51dp" android:id="@+id/botonBorrarTodo"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/pantallaVisualizacion"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/botonBorrarCaracter"/>
    <Button
            android:text="Borrar"
            android:layout_width="172dp"
            android:layout_height="50dp" android:id="@+id/botonBorrarCaracter"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/pantallaVisualizacion" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>