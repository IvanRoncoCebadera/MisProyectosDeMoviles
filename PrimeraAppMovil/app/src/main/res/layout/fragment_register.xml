<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.LoginFragment">

    <TextView
            android:layout_width="80dp"
            android:layout_height="19dp"
            android:text="ContraseÃ±a:"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            android:id="@+id/textView3" app:layout_constraintTop_toBottomOf="@+id/usernameTextRegister"
            android:layout_marginTop="20dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextRegister"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:hint="Password..." android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:minHeight="48dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="Nombre usuario:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/usernameTextRegister"
            android:layout_marginBottom="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameTextRegister"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:hint="Name..." android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="84dp"/>
    <TextView
            android:text="Gmail del usuario:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewGmail"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextRegister"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/gmailText"
            android:hint="Gmail..."
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewGmail" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Telefono del usuario:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewTelefono"
            app:layout_constraintTop_toBottomOf="@+id/gmailText"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/telefonoText"
            android:hint="Telefono..."
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTelefono" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"/>
    <TextView
            android:text="Registro"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Aceptar"
            android:layout_width="206dp"
            android:layout_height="50dp" android:id="@+id/botonAceptar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            android:layout_marginTop="16dp"/>
    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telefonoText" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.498" android:id="@+id/radioGroup" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
        <RadioButton
                android:text="Eres hombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButtonHombre"
                android:layout_weight="1"/>
        <RadioButton
                android:text="Eres mujer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButtonMujer"
                android:layout_weight="1"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>