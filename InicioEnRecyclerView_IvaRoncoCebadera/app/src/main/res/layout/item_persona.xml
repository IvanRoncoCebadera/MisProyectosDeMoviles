<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="352dp"
            android:layout_height="199dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/imagenPersona"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.504"/>
    <TextView
            android:textSize="20dp"
            android:hint="Nombre..."
            android:layout_width="289dp"
            android:layout_height="50dp" android:id="@+id/textoNombre"
            app:layout_constraintTop_toBottomOf="@+id/imagenPersona" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.506" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>